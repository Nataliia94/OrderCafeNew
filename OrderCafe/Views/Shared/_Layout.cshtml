<body>
    <header>




        <nav class="navbar navbar-light bg-light">
            <div class="container-fluid">
                <h1 class="navbar-brand mb-0 ">Delicota   service for ordering lunches</h1>

            </div>
        </nav>
    </header>

    <div class="container">

        <form>
            <div class="row g-5">
                <div class="col-sm-6">
                    <h4>Enter Your Name</h4>
                    <input id="firsName" type="text" class="form-control" placeholder="Enter your Name" />
                </div>
                <div class="col-sm-6">
                    <h4>Enter Your Phone Number</h4>
                    <input id="firsName" type="text" class="form-control" placeholder="Enter your Phone Number" />
                </div>
                <div class="col-sm-6">
                    <h4>Choose First Dish</h4>
                    <select id="username" class="form-control">
                        <option value="">Choose...</option>
                        <option value="">Choose1...</option>
                        <option value="">Choose2...</option>

                    </select>
                </div>
                <div class="col-sm-6">
                    <h4>Choose Second Dish</h4>
                    <select id="username" class="form-control">
                        <option value="">Choose...</option>
                        <option value="">Choose1...</option>
                        <option value="">Choose2...</option>

                    </select>
                </div>
                <div class="col-sm-6">
                    <h4>Payment type:</h4>
                    <select id="username" class="form-control">
                        <option value="">Choose...</option>
                        <option value="">Choose1...</option>

                    </select>
                </div>
                <hr class="my-4" />
                <div class="col-sm-6">
                    <h4>Price</h4>
                    <input id="txtunitPrice" type="text" readonly="readonly" value="0.00" name="UnitPrice" class="form-control" />
                </div>
                <div class="col-sm-6">
                    <h4>Amount</h4>
                    <input id="txtAmount" type="text" value="0.00" name="Amount" class="form-control" />
                </div>
                <div class="col-sm-6">
                    <h4>Total Price</h4>
                    <input id="txtTotalPrice" type="text" readonly="readonly" value="0.00" name="TotalPrice" class="form-control" />
                </div>
                <div class="col-sm-6">

                    <input id="btnAddtoList" type="submit" value="Create" name="AddtoList" class="btn btn-success" asp-action="Create" asp-controller="order" method="post" />
                </div>
            </div>
        </form>
    </div>
